<$list filter="[<$type$_alarms>!match[]] [<$type$_timers>!match[]]  [<$type$_journals>!match[]] [<$type$_events>!match[]] [<created>!match[]] [<modified>!match[]] +[limit[1]]">
<$wikify name="event_colors" text="<$list filter=<<$type$_events>>>{{{ [<currentTiddler>split[;]nth[1]get[eventcolor]!match[Default]else<eventsbg>] }}} </$list>">
<$vars colorcount={{{ [enlist<event_colors>count[]] }}}>
<$vars colorcount={{{ [<$type$_alarms>!match[]then<colorcount>add[1]else<colorcount>]    }}}>
<$vars colorcount={{{ [<$type$_timers>!match[]then<colorcount>add[1]else<colorcount>]    }}}>
<$vars colorcount={{{ [<$type$_journals>!match[]then<colorcount>add[1]else<colorcount>]  }}}>
<$vars colorcount={{{ [<created>!match[]then<colorcount>add[1]else<colorcount>]          }}}>
<$vars colorcount={{{ [<modified>!match[]then<colorcount>add[1]else<colorcount>]         }}}>
<$vars colorwidth={{{ [[calc(100% / ]addsuffix<colorcount>addsuffix[);]] }}}>
<$vars colorstyle={{{ [[display:inline-block;vertical-align:top;outline:1px solid;height:$(calendar_barheight)$;width:]addsuffix<colorwidth>] }}}>
<$set  name="tip" filter="[enlist<$type$_alarms>count[]!match[0]addprefix[alarms:]]     [enlist<$type$_timers>count[]!match[0]addprefix[timers:]]
                          [enlist<$type$_journals>count[]!match[0]addprefix[journals:]] [enlist:raw<event_colors>count[]!match[0]addprefix[events:]]
                          [enlist<created>count[]!match[0]addprefix[created:]]          [enlist<modified>count[]!match[0]addprefix[modified:]] +[join[, ]]" select=0>
<div style="position:absolute;bottom:0;left:0;width:calc(100% + 2px);height:$(calendar_barheight)$;border-top:1px solid;" title=<<tip>>>
   <$list filter="[<$type$_alarms>!match[]then<alarmsbg>]"     variable="color"> <<showday_button_colorbar_box>> </$list>
   <$list filter="[<$type$_timers>!match[]then<timersbg>]"     variable="color"> <<showday_button_colorbar_box>> </$list>
   <$list filter="[<$type$_journals>!match[]then<journalsbg>]" variable="color"> <<showday_button_colorbar_box>> </$list>
   <$list filter="[enlist<event_colors>]"                      variable="color"> <<showday_button_colorbar_box>> </$list>
   <$list filter="[<created>!match[]then<createdbg>]"          variable="color"> <<showday_button_colorbar_box>> </$list>
   <$list filter="[<modified>!match[]then<modifiedbg>]"        variable="color"> <<showday_button_colorbar_box>> </$list>
</div>
